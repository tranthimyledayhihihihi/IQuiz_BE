@model WEBB.Models.User.SettingDto

@{
    ViewBag.Title = "Cài đặt người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cài đặt người dùng</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@using (Html.BeginForm("Index", "Settings", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-2 control-label">
            Âm thanh
        </div>
        <div class="col-md-10">
            <label class="checkbox-inline">
                @Html.CheckBoxFor(m => m.AmThanh) Bật
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 control-label">
            Nhạc nền
        </div>
        <div class="col-md-10">
            <label class="checkbox-inline">
                @Html.CheckBoxFor(m => m.NhacNen) Bật
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 control-label">
            Thông báo
        </div>
        <div class="col-md-10">
            <label class="checkbox-inline">
                @Html.CheckBoxFor(m => m.ThongBao) Bật
            </label>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Ngôn ngữ</label>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.NgonNgu,
                new List<SelectListItem>
                {
                    new SelectListItem { Text = "Tiếng Việt", Value = "vi" },
                    new SelectListItem { Text = "English", Value = "en" }
                },
                "Chọn ngôn ngữ",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NgonNgu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">
                Lưu cài đặt
            </button>
        </div>
    </div>
}
